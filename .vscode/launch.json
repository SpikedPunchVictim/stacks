{
   // Use IntelliSense to learn about possible attributes.
   // Hover to view descriptions of existing attributes.
   // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
   "version": "0.2.0",
   "configurations": [
      {
         "name": "[stacks] Debug Tests",
         "type": "node",
         "request": "launch",
         "runtimeArgs": [
            "--inspect-brk",
            "${workspaceRoot}/stacks/node_modules/.bin/jest",
            "--runInBand",
            "--config",
            "${workspaceRoot}/stacks/jest.config.ts"
         ],
         "console": "integratedTerminal",
         "internalConsoleOptions": "neverOpen",
         "port": 9229
      },
      {
         "name": "[stacks] TS | Current File",
         "type": "node",
         "request": "launch",
         "args": [
            "${relativeFile}"
         ],
         "runtimeArgs": [
            "--nolazy",
            "-r",
            "ts-node/register"
         ],
         "sourceMaps": true,
         "cwd": "${workspaceRoot}",
         "protocol": "inspector",
         "smartStep": true,
         "env": {
            "NODE_PATH": "${workspaceRoot}/dev/node_modules",
            "TS_NODE_PROJECT": "${workspaceRoot}/dev/tsconfig.json"
         },
         "skipFiles": [
            "<node_internals>/**",
            "node_modules/**"
         ],
      },
      {
         "name": "[stacks-rest] TS | Current File",
         "type": "node",
         "request": "launch",
         "args": [
            "${relativeFile}"
         ],
         "runtimeArgs": [
            "--nolazy",
            "-r",
            "ts-node/register"
         ],
         "sourceMaps": true,
         "cwd": "${workspaceRoot}",
         "protocol": "inspector",
         "smartStep": true,
         "env": {
            "TS_NODE_PROJECT": "${workspaceRoot}/stacks-rest/tsconfig.json"
         },
         "skipFiles": [
            "<node_internals>/**",
            "node_modules/**"
         ],
      },
      {
         "name": "[stacks-rest] Debug Tests",
         "type": "node",
         "request": "launch",
         "runtimeArgs": [
            "--inspect-brk",
            "${workspaceRoot}/stacks-rest/node_modules/.bin/jest",
            "--runInBand",
            "--config",
            "${workspaceRoot}/stacks-rest/jest.config.ts"
         ],
         "console": "integratedTerminal",
         "internalConsoleOptions": "neverOpen",
         "port": 9229
      },
      {
         "name": "[stacks-fs] JS | Current File",
         "type": "node",
         "request": "launch",
         "smartStep": true,
         "skipFiles": [
             "<node_internals>/**",
             "node_modules/**"
         ],
         "program": "${workspaceFolder}/${relativeFile}",
         "cwd": "${workspaceFolder}/stacks-fs"
     }
   ]
}